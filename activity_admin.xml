<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Add Hackathons/Webinars Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="Add Hackathons/Webinars"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/eventNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name" />
        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location" />
        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (YYYY-MM-DD)" />
        <EditText
            android:id="@+id/deadlineEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration Deadline (YYYY-MM-DD)" />
        <EditText
            android:id="@+id/urlEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL" />
        <Button
            android:id="@+id/insertHackathonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Hackathon" />


        <!-- Add Hiring Challenge Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="Add Hiring Challenge"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/challengeNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Challenge Name" />

        <EditText
            android:id="@+id/eligibilityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Eligibility" />

        <EditText
            android:id="@+id/endDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/firstPhaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1st phase Date (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/urlEditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL" />

        <Button
            android:id="@+id/insertChallengeButton"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Insert Hiring Challenge" />


        <!-- Add Free Course Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="Add Free Course"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/courseNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Name" />

        <EditText
            android:id="@+id/courseDurationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Duration" />

        <EditText
            android:id="@+id/courseProviderEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provided by" />

        <EditText
            android:id="@+id/urlEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL" />

        <Button
            android:id="@+id/insertCourseButton"
            android:layout_width="391dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:text="Insert FreeCourse" />


        <!-- Add Contests Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="Add Contests"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/contestNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contest Name" />

        <EditText
            android:id="@+id/platformEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Platform" />

        <EditText
            android:id="@+id/contestDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/timeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time (HH:MM)" />

        <EditText
            android:id="@+id/durationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (in hours)" />

        <EditText
            android:id="@+id/contestUrlEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contest URL"
            android:inputType="textUri" />

        <Button
            android:id="@+id/insertContestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Contest" />


        <!-- Send Notifications Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="Send Notifications"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/postDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Post Date (YYYY-MM-DD)" />

        <EditText
            android:id="@+id/postTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Post Time (HH:MM)" />

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message" />

        <Button
            android:id="@+id/insertNotificationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Notification" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="logoutUser"
            android:text="Logout" />

    </LinearLayout>
</ScrollView>