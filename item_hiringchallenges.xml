<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChallengeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvEligibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eligibility"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvRegisterDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Deadline"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvFirstPhaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Phase Date"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>